<h1>Your Article-Edit</h1>

<form action="/articles/<%= @article_to_show.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="article[title]">Article Title:</label>
  <input type="text" name="article[title]" value="<%= @article_to_show.title %>" id="title">
  <label for="article[content]">Article Content:</label>
  <input type="text" name="article[content]" value="<%= @article_to_show.content %>" id="content">
  <input type="submit" :id="Submit">
</form>
